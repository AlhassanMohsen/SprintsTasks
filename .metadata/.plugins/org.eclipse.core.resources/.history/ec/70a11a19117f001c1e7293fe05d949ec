#ifndef MCAL_I2C_I2C_INTERFACE_H_
#define MCAL_I2C_I2C_INTERFACE_H_

#define I2C_START_TRANSMITTED				0x08
#define I2C_REPEATED_START_TRANSMITTED		0x10
#define I2C_SLAVE_WRITE_ACK_TRANSMITTED		0x18
#define I2C_SLAVE_WRITE_NACK_TRANSMITTED	0x20
#define I2C_DATA_ACK_TRANSMITTED			0x28
#define I2C_DATA_NACK_TRANSMITTED			0x30
#define I2C_ARBITRATION_LOST				0x38

#define I2C_MR_SLAVE_ADDRESS_ACK_RECEIVED	0x40
#define I2C_MR_SLAVE_ADDRESS_NACK_RECEIVED	0x48
#define I2C_MR_DATA_ACK_TRANSMITTED			0x50
#define I2C_MR_DATA_NACK_TRANSMITTED		0x58

#define I2C_OWN_ADDRESS_CALLED				0x60
#define I2C_ARBITRATION_LOST_OWN_ADDRESS	0x68
#define I2C_GENERAL_CALL					0x70
#define I2C_ARBITRATION_LOST_GENERAL_CALL	0x78
#define I2C_DATA_RECIEVED					0x80
#define I2C_LAST_BYTE_RECIEVED				0x88
#define I2C_GENERAL_DATA_RECEIVED			0x90
#define I2C_GENERAL_LAST_BYTE_RECEIVED		0x98
#define I2C_STOP_CONDITION					0xA0

#define I2C_
#define I2C_
#define I2C_
#define I2C_
#define I2C_
#define I2C_
#define I2C_

#endif /* MCAL_I2C_I2C_INTERFACE_H_ */
